import React, { useState, useEffect, useRef } from 'react';
import { Play, Save, Download, Upload, Plus, X, Menu, Eye, Code, FileText, Smartphone, Monitor } from 'lucide-react';

const MobileCodeSandbox = () => {
  const [files, setFiles] = useState([
    { id: 1, name: 'index.html', language: 'html', content: `<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Project</title>
</head>
<body>
  <div class="container">
    <h1>Welcome to CodeSandbox Mobile</h1>
    <p>Edit HTML, CSS, and JavaScript in real-time!</p>
    <button onclick="handleClick()">Click Me</button>
    <div id="output"></div>
  </div>
</body>
</html>` },
    { id: 2, name: 'style.css', language: 'css', content: `* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20px;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  background: white;
  padding: 30px;
  border-radius: 15px;
  box-shadow: 0 10px 40px rgba(0,0,0,0.2);
}

h1 {
  color: #333;
  margin-bottom: 10px;
}

p {
  color: #666;
  margin-bottom: 20px;
}

button {
  background: #667eea;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s;
}

button:hover {
  background: #764ba2;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

#output {
  margin-top: 20px;
  padding: 15px;
  background: #f5f5f5;
  border-radius: 8px;
  min-height: 50px;
}` },
    { id: 3, name: 'script.js', language: 'javascript', content: `function handleClick() {
  const output = document.getElementById('output');
  const colors = ['#667eea', '#764ba2', '#f093fb', '#4facfe'];
  const randomColor = colors[Math.floor(Math.random() * colors.length)];
  
  output.innerHTML = '<p style="color: ' + randomColor + '; font-size: 18px; font-weight: bold;">Button clicked! ðŸŽ‰</p>';
  
  console.log('Button was clicked at:', new Date().toLocaleTimeString());
}

console.log('Script loaded successfully!');` }
  ]);

  const [activeFileId, setActiveFileId] = useState(1);
  const [showPreview, setShowPreview] = useState(true);
  const [showSidebar, setShowSidebar] = useState(false);
  const [previewMode, setPreviewMode] = useState('desktop');
  const [consoleLog, setConsoleLog] = useState([]);
  const [showConsole, setShowConsole] = useState(false);
  const [previewKey, setPreviewKey] = useState(0);
  const [showNewFileDialog, setShowNewFileDialog] = useState(false);
  const [newFileName, setNewFileName] = useState('');
  const iframeRef = useRef(null);

  const activeFile = files.find(f => f.id === activeFileId);

  const runCode = () => {
    setConsoleLog([]);
    setPreviewKey(prev => prev + 1);
    
    setTimeout(() => {
      const htmlFile = files.find(f => f.name === 'index.html');
      const cssFile = files.find(f => f.name === 'style.css');
      const jsFile = files.find(f => f.name === 'script.js');

      if (!htmlFile) return;

      let htmlContent = htmlFile.content;
      
      const cssContent = cssFile?.content || '';
      const styleTag = `<style>${cssContent}</style>`;
      
      if (htmlContent.includes('</head>')) {
        htmlContent = htmlContent.replace('</head>', `${styleTag}</head>`);
      } else {
        htmlContent = styleTag + htmlContent;
      }
      
      const consoleCapture = `
        <script>
          (function() {
            const oldLog = console.log;
            const oldError = console.error;
            const oldWarn = console.warn;
            
            console.log = function(...args) {
              try {
                window.parent.postMessage({ 
                  type: 'console', 
                  method: 'log', 
                  args: args.map(a => String(a))
                }, '*');
              } catch(e) {}
              oldLog.apply(console, args);
            };
            
            console.error = function(...args) {
              try {
                window.parent.postMessage({ 
                  type: 'console', 
                  method: 'error', 
                  args: args.map(a => String(a))
                }, '*');
              } catch(e) {}
              oldError.apply(console, args);
            };
            
            console.warn = function(...args) {
              try {
                window.parent.postMessage({ 
                  type: 'console', 
                  method: 'warn', 
                  args: args.map(a => String(a))
                }, '*');
              } catch(e) {}
              oldWarn.apply(console, args);
            };
            
            window.onerror = function(msg, url, line, col, error) {
              try {
                window.parent.postMessage({ 
                  type: 'console', 
                  method: 'error', 
                  args: ['Error: ' + msg + ' (Line ' + line + ')']
                }, '*');
              } catch(e) {}
              return true;
            };
          })();
        </script>
      `;
      
      const jsContent = jsFile?.content || '';
      const scriptTag = `<script>${jsContent}</script>`;
      
      if (htmlContent.includes('</body>')) {
        htmlContent = htmlContent.replace('</body>', `${consoleCapture}${scriptTag}</body>`);
      } else {
        htmlContent = htmlContent + consoleCapture + scriptTag;
      }

      if (iframeRef.current) {
        const iframeDoc = iframeRef.current.contentDocument || iframeRef.current.contentWindow.document;
        iframeDoc.open();
        iframeDoc.write(htmlContent);
        iframeDoc.close();
      }
    }, 100);
  };

  useEffect(() => {
    runCode();
  }, []);

  useEffect(() => {
    const handleMessage = (event) => {
      if (event.data && event.data.type === 'console') {
        setConsoleLog(prev => [...prev, {
          method: event.data.method,
          args: event.data.args,
          timestamp: new Date().toLocaleTimeString()
        }]);
      }
    };

    window.addEventListener('message', handleMessage);
    return () => window.removeEventListener('message', handleMessage);
  }, []);

  const updateFileContent = (content) => {
    setFiles(files.map(f => 
      f.id === activeFileId ? { ...f, content } : f
    ));
  };

  const handleAddFileClick = (e) => {
    e.preventDefault();
    e.stopPropagation();
    setShowNewFileDialog(true);
  };

  const handleAddFile = () => {
    const trimmedName = newFileName.trim();
    
    if (!trimmedName) {
      alert('Please enter a file name');
      return;
    }
    
    // Check if file already exists
    if (files.some(f => f.name === trimmedName)) {
      alert('File with this name already exists!');
      return;
    }
    
    const ext = trimmedName.split('.').pop().toLowerCase();
    const langMap = { 
      js: 'javascript', 
      css: 'css', 
      html: 'html', 
      json: 'json',
      txt: 'text',
      jsx: 'javascript',
      ts: 'typescript',
      tsx: 'typescript'
    };
    
    const newFile = {
      id: Date.now(),
      name: trimmedName,
      language: langMap[ext] || 'text',
      content: ''
    };
    
    setFiles(prev => [...prev, newFile]);
    setActiveFileId(newFile.id);
    setNewFileName('');
    setShowNewFileDialog(false);
  };

  const handleDeleteFile = (e, fileId, fileName) => {
    e.preventDefault();
    e.stopPropagation();
    
    if (files.length <= 1) {
      alert('Cannot delete the last file!');
      return;
    }
    
    const userConfirmed = window.confirm(`Delete "${fileName}"?`);
    
    if (userConfirmed) {
      const newFiles = files.filter(f => f.id !== fileId);
      setFiles(newFiles);
      
      if (activeFileId === fileId) {
        setActiveFileId(newFiles[0].id);
      }
    }
  };

  const downloadProject = () => {
    const zip = files.map(f => `// ${f.name}\n${f.content}`).join('\n\n\n');
    const blob = new Blob([zip], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'project.txt';
    a.click();
    URL.revokeObjectURL(url);
  };

  const saveToMemory = () => {
    try {
      const data = JSON.stringify(files, null, 2);
      const blob = new Blob([data], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'project.json';
      a.click();
      URL.revokeObjectURL(url);
      alert('Project saved successfully!');
    } catch (e) {
      alert('Error saving project');
    }
  };

  const loadFromFile = (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (event) => {
        try {
          const loadedFiles = JSON.parse(event.target.result);
          if (Array.isArray(loadedFiles) && loadedFiles.length > 0) {
            setFiles(loadedFiles);
            setActiveFileId(loadedFiles[0].id);
            alert('Project loaded successfully!');
            setTimeout(runCode, 100);
          } else {
            alert('Invalid project file');
          }
        } catch (err) {
          alert('Error loading file: ' + err.message);
        }
      };
      reader.readAsText(file);
    }
  };

  return (
    <div className="flex flex-col h-screen bg-gray-900 text-white">
      {/* New File Dialog */}
      {showNewFileDialog && (
        <div 
          className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4"
          onClick={() => {
            setShowNewFileDialog(false);
            setNewFileName('');
          }}
        >
          <div 
            className="bg-gray-800 rounded-lg p-6 w-full max-w-md"
            onClick={(e) => e.stopPropagation()}
          >
            <h3 className="text-lg font-bold mb-4">Create New File</h3>
            <input
              type="text"
              value={newFileName}
              onChange={(e) => setNewFileName(e.target.value)}
              placeholder="e.g., app.js, style.css, index.html"
              className="w-full p-3 bg-gray-700 rounded mb-4 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
              onKeyDown={(e) => {
                if (e.key === 'Enter') {
                  handleAddFile();
                } else if (e.key === 'Escape') {
                  setShowNewFileDialog(false);
                  setNewFileName('');
                }
              }}
              autoFocus
            />
            <div className="flex gap-2">
              <button
                onClick={handleAddFile}
                className="flex-1 bg-blue-600 hover:bg-blue-700 p-2 rounded font-semibold"
              >
                Create
              </button>
              <button
                onClick={() => {
                  setShowNewFileDialog(false);
                  setNewFileName('');
                }}
                className="flex-1 bg-gray-600 hover:bg-gray-700 p-2 rounded font-semibold"
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Header */}
      <div className="bg-gray-800 border-b border-gray-700 p-3 flex items-center justify-between">
        <div className="flex items-center gap-2">
          <button
            onClick={() => setShowSidebar(!showSidebar)}
            className="p-2 hover:bg-gray-700 rounded lg:hidden"
          >
            <Menu size={20} />
          </button>
          <Code size={24} className="text-blue-400" />
          <span className="font-bold text-lg hidden sm:inline">CodeSandbox</span>
        </div>
        
        <div className="flex items-center gap-1 sm:gap-2">
          <button
            onClick={() => { setConsoleLog([]); runCode(); }}
            className="p-2 bg-green-600 hover:bg-green-700 rounded flex items-center gap-1 text-sm font-semibold"
          >
            <Play size={16} />
            <span className="hidden sm:inline">Run</span>
          </button>
          
          <button
            onClick={saveToMemory}
            className="p-2 bg-blue-600 hover:bg-blue-700 rounded"
            title="Save Project"
          >
            <Save size={16} />
          </button>
          
          <button
            onClick={downloadProject}
            className="p-2 bg-purple-600 hover:bg-purple-700 rounded hidden sm:block"
            title="Download"
          >
            <Download size={16} />
          </button>
          
          <label className="p-2 bg-orange-600 hover:bg-orange-700 rounded cursor-pointer">
            <Upload size={16} />
            <input type="file" onChange={loadFromFile} className="hidden" accept=".json" />
          </label>
          
          <button
            onClick={() => setShowPreview(!showPreview)}
            className="p-2 bg-gray-700 hover:bg-gray-600 rounded"
            title="Toggle Preview"
          >
            {showPreview ? <Code size={16} /> : <Eye size={16} />}
          </button>
        </div>
      </div>

      <div className="flex flex-1 overflow-hidden">
        {/* Sidebar - File List */}
        <div className={`${showSidebar ? 'block' : 'hidden'} lg:block absolute lg:relative z-20 w-64 bg-gray-800 border-r border-gray-700 overflow-y-auto h-full`}>
          <div className="p-3 border-b border-gray-700 flex items-center justify-between">
            <span className="font-semibold text-sm">Files ({files.length})</span>
            <button
              onClick={handleAddFileClick}
              className="p-1.5 bg-blue-600 hover:bg-blue-700 rounded transition-colors flex items-center justify-center"
              title="Add New File"
              type="button"
            >
              <Plus size={16} />
            </button>
          </div>
          
          {files.map(file => (
            <div
              key={file.id}
              className={`flex items-center justify-between p-3 cursor-pointer border-b border-gray-700 hover:bg-gray-700 transition-colors ${
                activeFileId === file.id ? 'bg-gray-700 border-l-4 border-l-blue-500' : ''
              }`}
              onClick={() => {
                setActiveFileId(file.id);
                if (window.innerWidth < 1024) {
                  setShowSidebar(false);
                }
              }}
            >
              <div className="flex items-center gap-2 flex-1 min-w-0">
                <FileText size={16} className="text-blue-400 flex-shrink-0" />
                <span className="text-sm truncate">{file.name}</span>
              </div>
              {files.length > 1 && (
                <button
                  onClick={(e) => handleDeleteFile(e, file.id, file.name)}
                  className="p-1 hover:bg-red-600 rounded transition-colors flex-shrink-0 ml-2"
                  title="Delete File"
                  type="button"
                >
                  <X size={14} />
                </button>
              )}
            </div>
          ))}
        </div>

        {/* Main Content Area */}
        <div className="flex-1 flex flex-col lg:flex-row overflow-hidden">
          {/* Code Editor */}
          <div className={`${showPreview ? 'h-1/2 lg:h-full lg:w-1/2' : 'h-full w-full'} flex flex-col border-b lg:border-b-0 lg:border-r border-gray-700`}>
            <div className="bg-gray-800 p-2 border-b border-gray-700 flex items-center justify-between">
              <span className="text-sm font-semibold truncate">{activeFile?.name}</span>
              <span className="text-xs text-gray-400 uppercase ml-2">{activeFile?.language}</span>
            </div>
            
            <textarea
              value={activeFile?.content || ''}
              onChange={(e) => updateFileContent(e.target.value)}
              className="flex-1 bg-gray-900 text-gray-100 p-4 font-mono text-sm resize-none focus:outline-none"
              spellCheck="false"
              style={{ tabSize: 2, lineHeight: '1.5' }}
              placeholder="Start coding..."
            />
          </div>

          {/* Preview Panel */}
          {showPreview && (
            <div className="h-1/2 lg:h-full lg:w-1/2 flex flex-col bg-gray-100">
              <div className="bg-gray-800 p-2 border-b border-gray-700 flex items-center justify-between">
                <span className="text-sm font-semibold">Preview</span>
                <div className="flex gap-1">
                  <button
                    onClick={() => setPreviewMode('mobile')}
                    className={`p-1 rounded transition-colors ${previewMode === 'mobile' ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600'}`}
                    title="Mobile View"
                  >
                    <Smartphone size={16} />
                  </button>
                  <button
                    onClick={() => setPreviewMode('desktop')}
                    className={`p-1 rounded transition-colors ${previewMode === 'desktop' ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600'}`}
                    title="Desktop View"
                  >
                    <Monitor size={16} />
                  </button>
                  <button
                    onClick={() => setShowConsole(!showConsole)}
                    className={`p-1 rounded transition-colors ${showConsole ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600'}`}
                    title="Console"
                  >
                    <Code size={16} />
                  </button>
                </div>
              </div>
              
              <div className="flex-1 overflow-hidden flex flex-col">
                <div className={`${showConsole ? 'h-2/3' : 'h-full'} flex justify-center items-start bg-gray-100 p-4 overflow-auto`}>
                  <iframe
                    key={previewKey}
                    ref={iframeRef}
                    className={`bg-white shadow-lg ${
                      previewMode === 'mobile' 
                        ? 'w-full max-w-sm h-full' 
                        : 'w-full h-full'
                    }`}
                    title="preview"
                    sandbox="allow-scripts allow-modals allow-forms allow-popups allow-same-origin"
                  />
                </div>
                
                {showConsole && (
                  <div className="h-1/3 bg-gray-900 border-t border-gray-700 overflow-y-auto p-2">
                    <div className="flex items-center justify-between mb-2 pb-2 border-b border-gray-700">
                      <span className="text-xs font-semibold text-gray-300">Console</span>
                      <button
                        onClick={() => setConsoleLog([])}
                        className="text-xs bg-gray-700 hover:bg-gray-600 px-2 py-1 rounded transition-colors"
                      >
                        Clear
                      </button>
                    </div>
                    {consoleLog.length === 0 && (
                      <div className="text-xs text-gray-500 italic">Console output will appear here...</div>
                    )}
                    {consoleLog.map((log, i) => (
                      <div key={i} className={`text-xs mb-1 font-mono ${
                        log.method === 'error' ? 'text-red-400' : 
                        log.method === 'warn' ? 'text-yellow-400' : 
                        'text-green-400'
                      }`}>
                        <span className="text-gray-500">[{log.timestamp}]</span> {log.args.join(' ')}
                      </div>
                    ))}
                  </div>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

export default MobileCodeSandbox;
